<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoMarguerite</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/cascada.styles.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kaushan+Script&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body>
    <!--Header-->
    <header>
        <div class="header-container">
            <h2 class="animate__animated animate__bounce">Le petits Marguerite</h2>
        </div>
        <nav>
            <a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
            <a href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Menu</a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li><a class="dropdown-item" asp-controller="Flores" asp-action="Create">Carga una flor</a></li>
                <li><a class="dropdown-item" asp-controller="Flores" asp-action="ListaFlores">Lista de flores</a></li>
            </ul>
            <a href="#Contacto">Contacto</a>
            <a href="#Contacto">Quién soy</a>


        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-final">
        <section class="izquierda">
            <div class="social">
                <h4> Ramos</h4>
                <ol>
                    <li>Ramos de novia</li>
                    <li>Ramos para el dia de la madre</li>
                    <li>Ramos para san valentin</li>
                    <li>Ramos para amigas</li>
                    <li>Ramos para quinceaños</li>
                    <li>Ramos para funerales</li>
                </ol>
                <h4>Categorias </h4>
                <ol>
                    <li>Agradecimientos</li>
                    <li>Aniversarios</li>
                    <li>Casamientos</li>
                    <li>Cumpleaños</li>
                    <li>Nacimientos</li>
                    <li>Hogar</li>
                    <li>Pésame</li>
                </ol>
            </div>            

            <div class="social-2">
                <h3>Siguenos en las redes</h3>
                <a href="#quiensoy"><i class='bx bxl-instagram'></i></a>
                <a href="#quiensoy"><i class='bx bxl-facebook-circle'></i></a>
                <a href="#quiensoy"><i class='bx bxl-whatsapp'></i></a>
            </div>
        </section>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/lib/bootbox/bootbox.all.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required:false)
</body>
</html>
