<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoMarguerite</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kaushan+Script&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/site.css" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <!--Header-->
    <header>
        <div class="header-container">
            <h2 class ="animate__animated animate__bounce">Le petits Marguerite</h2>
        </div>
        <nav>
            <a href="#Inicio">Menú</a>
            <a asp-area="" asp-controller="Flores" asp-action="Create">Crear</a>
            <a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
            <a href="#Contacto">Contacto</a>
            <a href="#quiensoy">Quien soy</a>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-final">
        <section class="izquierda">
        <div class="social">
            <h3>Siguenos en las redes</h3>
            <a href="#quiensoy"><i class='bx bxl-instagram'></i></a>
            <a href="#quiensoy"><i class='bx bxl-facebook-circle'></i></a>
            <a href="#quiensoy"><i class='bx bxl-whatsapp'></i></a>
        </div>

        <div class="social-2">
            <h3>Siguenos en las redes</h3>
            <a href="#quiensoy"><i class='bx bxl-instagram'></i></a>
            <a href="#quiensoy"><i class='bx bxl-facebook-circle'></i></a>
            <a href="#quiensoy"><i class='bx bxl-whatsapp'></i></a>
        </div>
        </section>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/lib/bootbox/bootbox.all.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required:false)
</body>
</html>
